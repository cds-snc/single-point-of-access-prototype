{% extends "base.njk" %}
{% from 'banner.njk' import banner as banner %}

{% block content %}
    <div class="flex flex-wrap flex-row">
        <div class="filters flex flex-1 flex-col mr-10">
            <!-- Keyword Search -->
            <div class="mb-2 bg-gray-100 bg-gray-100 p-2 border border-solid border-gray-300">
                <form class="search-form my-0 ">
                    <div class="search-box">
                        <div class="search-box-label">
                            <label for="keywords">
                                Keyword search
                            </label>
                        </div>
                        <div class="container-search">
                            <input class="mt-0 text-md" type="search" name="q" id="keywords" value="" maxlength="200">
                            <input id="search" class="submit search-btn" type="submit" value="Search">
                        </div>
                    </div>
                </form>
            </div>

            <!-- Categories -->
            <div class="categories bg-gray-100 my-2 bg-gray-100 p-2 border border-solid border-gray-300">
                <div class="title">All categories</div>
                <a href="#">Digital outcomes</a><br/>
                <a href="#">Digital specialists</a><br/>
                <a href="#">User research participants</a><br/>
            </div>

            <!-- Status -->

            <div class="apply-filters my-2 bg-gray-100 p-2 border border-solid border-gray-300">
                <form class="my-2">
                    <div>
                        {{ checkBoxes('apply_filters', {'1':'Open','2':'Closed'}, data.notify_type, 'form.apply_filters', errors) }}
                    </div>
                </form>
            </div>

            <!-- Locations -->

            <div class="apply-filters my-2 bg-gray-100 px-2 py-2 border border-solid border-gray-300">
                <form class="my-0">
                    <div>
                        {{ checkBoxes('apply_locations', {'1':'Ontario','2':'PEI'}, data.notify_type, 'form.apply_locations', errors) }}
                    </div>
                </form>
            </div>
            <!-- -->

        </div>
        <div class="flex flex-grow">
            <div class="flex flex-wrap flex-col">
                <div id="results">
                    {% for item in items %}
                        {{listItem(item) }}
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}