{% macro listItem(attributes) %}
    <!-- start list item -->
    <div class="list-item">
        <h2 class="my-1 text-blue">{{attributes.heading}}</h2>
        <div class="location my-0 text-sm font-bold text-gray-800">
            <div class="location-1">{{attributes.location1}}</div>
            <div class="location-2">{{attributes.location2}}</div>
        </div>
        <!-- start details -->
        <div class="details my-1 text-gray-800 text-sm">
            <div class="title">{{attributes.title}}</div>
            <div class="published">{{attributes.published}}</div>
            <div class="deadline">{{attributes.deadline}}</div>
            <div class="closing">{{attributes.closing}}</div>
        </div>
        <!-- end details -->
        <p class="description my-2 text-gray-800">{{attributes.description}}</p>
        <hr class="list-item-line my-6" />
    </div>
    <!-- end list item -->
{% endmacro %}